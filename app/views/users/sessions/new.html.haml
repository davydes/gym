%div.login
  %h3.authTitle Login or #{link_to 'Sign up', new_registration_path(resource_name)}

  = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|

    %div.form-group
      %div.input-group
        %span.input-group-addon
          %i.fa.fa-fw.fa-envelope
        = f.email_field :email, autofocus: true, class: 'form-control', placeholder: "e-mail"

    %div.form-group
      %div.input-group
        %span.input-group-addon
          %i.fa.fa-fw.fa-lock
        = f.password_field :password, autocomplete: "off", class: 'form-control', placeholder: "password"

    - if devise_mapping.rememberable?
      %div.form-group
        = f.check_box :remember_me
        = f.label :remember_me

    %div.form-group
      = button_tag(type: 'submit', class: "btn btn-lg btn-primary btn-block") do
        %i.fa.fa-sign-in
        Login

= render "users/shared/links"
