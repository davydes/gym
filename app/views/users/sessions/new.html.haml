%div.login
  %h3.authTitle #{t '.login_or'} #{link_to t('users.registrations.new.signup'), new_registration_path(resource_name)}

  = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|

    %div.form-group
      %div.input-group
        %span.input-group-addon
          %i.fa.fa-fw.fa-envelope
        = f.email_field :email, autofocus: true, class: 'form-control', placeholder: "e-mail"

    %div.form-group
      %div.input-group
        %span.input-group-addon
          %i.fa.fa-fw.fa-lock
        = f.password_field :password, autocomplete: "off", class: 'form-control', placeholder: t('.placeholder_password')

    - if devise_mapping.rememberable?
      %div.form-group
        = f.check_box :remember_me
        = f.label t('.remember_me')

    %div.form-group
      = button_tag(type: 'submit', class: "btn btn-lg btn-primary btn-block") do
        %i.fa.fa-sign-in
        = t '.login'

= render "users/shared/links"
