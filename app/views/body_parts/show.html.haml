%h2
  = link_to 'Body Parts', body_parts_path
  \\
  #{@body_part.name}

  - if can? :manage, @body_part
    .dropdown.pull-right
      %a.btn.btn-sm.btn-primary.dropdown-toggle#dropdownMenu1{type: "button", data:{toggle:"dropdown"}, aria:{haspopup:"true", expanded:"false"}}
        %i.fa.fa-cog
        %span.caret
      %ul.dropdown-menu{aria:{labelledby:"dropdownMenu1"}}
        %li
          = link_to edit_body_part_path(@body_part) do
            %i.fa.fa-edit
            Edit
        %li
          = link_to '#', data: { toggle: "modal", target: "#confirm-delete"} do
            %i.fa.fa-trash-o
            Delete

%strong Latin:
= @body_part.alias.humanize

%br

%strong Exercises:
= @body_part.exercises.map{ |e| link_to(e.name, exercise_path(e)) }.join(', ').html_safe

%br

%strong Muscles:
= @body_part.muscles.map{ |m| link_to(m.name, muscle_path(m)) }.join(', ').html_safe

%br

%strong Description:
%br
= @body_part.description

.modal.fade#confirm-delete{tabindex:"-1", role: "dialog", aria: {labelledby: "myModalLabel", hidden: "true"}}
  .modal-dialog
    .modal-content
      .modal-header
        %button{type: "button", class: "close", data: {dismiss: "modal"}, aria: {hidden: "true"}} &times;
        %h4.modal-title#myModalLabel Confirm Delete
      .modal-body
        You are about to delete body part, this procedure is irreversible.
        Do you want to proceed?
      .modal-footer
        %button{type: "button", class: "btn btn-default", data: {dismiss: "modal"}} Cancel
        = link_to body_part_path(@body_part), class: "btn btn-danger btn-ok", method: 'delete' do
          %i.fa.fa-trash-o
          Delete